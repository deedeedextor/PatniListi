@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтрий лични данни";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="alert alert-primary" role="alert">
    <p>
        <strong>Изтриването на личните данни води до изтриване на акаунта. Те не могат да бъдат възстановени в последствие.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div id="validationColor" asp-validation-summary="All"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger btn-block" type="submit">Изтрий</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}