@{
    Layout = "/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Акаунт";
}

<section class="py-5">
    <div class="container shadow py-4 px-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <h3 class="text-center">Променете настройките на вашия акаунт</h3>
        <hr />

        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col-md-3">
                        <partial name="_ManageNav" />
                    </div>
                    <div class="col-md-9">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
