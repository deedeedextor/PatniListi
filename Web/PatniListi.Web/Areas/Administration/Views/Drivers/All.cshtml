@using  PatniListi.Web.Infrastructure;
@model PaginatedList<PatniListi.Web.ViewModels.Administration.Users.UserViewModel>

@{
    ViewData["Title"] = "Шофьори";
}

    <section class="py-5">
        <div class="container shadow py-4 px-4">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div>
                <a class="nav-link btn btn-primary btn-block text-uppercase" asp-area="Administration" asp-controller="Drivers" asp-action="Create">Добави шофьор</a>

                <div>
                    <div class="clearfix"></div>
                    @if (Model.TotalPages != 0)
                    {
                        if (!Model.PreviousDisabled)
                        {
                            <div class="float-md-left">
                                <a asp-action="All"
                                   asp-route-pageNumber="@Model.PreviousPage"
                                   class="button">
                                    Предишна
                                </a>
                            </div>
                        }

                        if (!Model.NextDisabled)
                        {
                            <div class="float-md-right">
                                <a asp-action="All"
                                   asp-route-pageNumber="@Model.NextPage"
                                   class="button">
                                    Следваща
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>

            <br />
            <br />

            <table class="table table-responsive-md table-hover">
                <tr class="text-white">
                    <th>
                        Потребител
                    </th>
                    <th>
                        Емайл
                    </th>
                    <th>
                        Име и фамилия
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.Username
                        </td>
                        <td>
                            @user.Email
                        </td>
                        <td>
                            @user.FullName
                        </td>
                        <td class="text-center">
                            <div>
                                <a href="/Administration/Drivers/Details/@user.Id" class="justify-content-md-between">Детайли</a>
                            </div>
                            <div>
                                <a href="/Administration/Drivers/Edit/@user.Id" class="justify-content-md-between">Промени</a>
                            </div>
                            <div>
                                <a href="/Administration/Drivers/Delete/@user.Id" class="justify-content-md-between">Изтрий</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>

            <div class="form-group text-center">
                <div class="button-holder">
                    <a asp-area="Administration" asp-controller="Cars" asp-action="All" class="text-uppercase">Автомобили</a>
                </div>
            </div>
        </div>
     </section>