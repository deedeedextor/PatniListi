@model PatniListi.Web.ViewModels.Administration.Users.UserDeleteViewModel

@{
    ViewData["Title"] = $"Сигурни ли сте, че искате да изтриете {Model.FullName}?";
}

<section class="py-5">
    <div class="container shadow py-4 px-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" readonly class="form-control text-white" id="model" name="Model" value="@Model.Username">
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" readonly class="form-control text-white" id="licensePlate" name="LicensePlate" value="@Model.Email">
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" readonly class="form-control text-white" id="fuelType" name="FuelType" value="@Model.FullName">
            </div>
            <div class="form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" readonly class="form-control text-white" id="companyName" name="CompanyName" value="@Model.CompanyName">
            </div>
            <div class="form-group">
                <label asp-for="AllCars"></label>
                @foreach (var car in Model.AllCars)
                {
                    <input asp-for="AllCars" readonly class="form-control text-white" id="carModel" name="CarModel" value="@car.CarModel">
                }
            </div>
        </div>
        <br />

        <div class="form-group text-center">
            <div class="button-holder">
                <a href="/Administration/Drivers/ConfirmDelete?Id=@Model.Id" class="btn btn-primary btn-block text-uppercase">Изтрий</a>
                <a asp-area="Administration" asp-controller="Drivers" asp-action="All" class="text-uppercase">Шофьори</a>
            </div>
        </div>
    </div>
</section>