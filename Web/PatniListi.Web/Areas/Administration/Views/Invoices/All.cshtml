@using  PatniListi.Web.Infrastructure;
@model PaginatedList<PatniListi.Web.ViewModels.Administration.Invoices.InvoiceViewModel>

@{
    ViewData["Title"] = "Фактури";
}

<section class="py-5">
    <div class="container shadow py-4 px-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div>
            <a class="nav-link btn btn-primary btn-block text-uppercase" asp-area="Administration" asp-controller="Invoices" asp-action="Create">Добави фактура</a>

            <div class="row">
                <div class="clearfix"></div>
                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }
                <div class="col-md-6 text-md-right">
                    <a asp-action="All"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       class="button @prevDisabled">
                        Предишна
                    </a>
                </div>

                <div class="col-md-6 text-md-left">
                    <a asp-action="All"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       class="button @nextDisabled">
                        Следваща
                    </a>
                </div>
            </div>
        </div>

        <br />
        <br />

        <table class="table table-responsive-md table-hover">
            <tr class="text-white">
                <th>
                    Дата
                </th>
                <th>
                    Номер
                </th>
                <th>
                    Място
                </th>
                <th>
                    Заредил
                </th>
                <th>
                    Сума
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>
                        @invoice.Date.ToShortDateString()
                    </td>
                    <td>
                        @invoice.Number
                    </td>
                    <td>
                        @invoice.Location
                    </td>
                    <td>
                        @invoice.ApplicationUserFullName
                    </td>
                    <td>
                        @invoice.TotalPrice
                    </td>
                    <td>
                        <div class="form-group">
                            <input type="hidden" asp-for="@invoice.CarId" readonly class="form-control" value="@invoice.CarId" />
                        </div>
                    </td>

                    <td class="text-center">
                        <div>
                            <a href="/Administration/Invoices/Details/@invoice.Id" class="justify-content-md-between">Детайли</a>
                        </div>
                        <div>
                            <a href="/Administration/Invoices/Edit/@invoice.Id" class="justify-content-md-between">Промени</a>
                        </div>
                        <div>
                            <a href="/Administration/Invoices/Delete/@invoice.Id" class="justify-content-md-between">Изтрий</a>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <br />

        <div class="form-group text-center">
            <div class="button-holder">
                <a asp-area="Administration" asp-controller="Cars" asp-action="All" class="text-uppercase">Автомобили</a>
            </div>
        </div>
    </div>
</section>