@model PatniListi.Web.ViewModels.Administration.Cars.CarDetailsViewModel

@{
    ViewData["Title"] = $"Детайли за {Model.Model}";
}

<section class="py-5">
    <div class="container shadow py-4 px-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Model"></label>
                        <input asp-for="Model" readonly class="form-control text-white" id="model" name="Model" value="@Model.Model">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="LicensePlate"></label>
                        <input asp-for="LicensePlate" readonly class="form-control text-white" id="licensePlate" name="LicensePlate" value="@Model.LicensePlate">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CompanyName"></label>
                        <input asp-for="CompanyName" readonly class="form-control text-white" id="companyName" name="CompanyName" value="@Model.CompanyName">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CreatedOn"></label>
                        <input type="text" asp-for="CreatedOn" readonly class="form-control text-white" id="createdOn" name="CreatedOn" value="@Model.CreatedOn.ToShortDateString()">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FuelType"></label>
                        <input asp-for="FuelType" readonly class="form-control text-white" id="fuelType" name="FuelType" value="@Model.FuelType">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="TankCapacity"></label>
                        <input asp-for="TankCapacity" readonly class="form-control text-white" id="tankCapacity" name="TankCapacity" value="@Model.TankCapacity">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StartKilometers"></label>
                        <input asp-for="StartKilometers" readonly class="form-control text-white" id="startKilometers" name="StartKilometers" value="@Model.StartKilometers">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="InitialFuel"></label>
                        <input asp-for="InitialFuel" readonly class="form-control text-white" id="initialFuel" name="InitialFuel" value="@Model.InitialFuel">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="AverageConsumption"></label>
                        <input asp-for="AverageConsumption" readonly class="form-control text-white" id="averageConsumption" name="AverageConsumption" value="@Model.AverageConsumption">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="AllDrivers"></label>
                        @foreach (var driver in Model.AllDrivers)
                        {
                            <input asp-for="AllDrivers" readonly class="form-control text-white" id="applicationUserFullName" name="ApplicationUserFullName" value="@driver.ApplicationUserFullName">
                        }
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="CompanyId" readonly class="form-control" value="@Model.CompanyId" />
                    </div>
                </div>
            </div>
            <br />

            <div class="form-group text-center">
                <div class="button-holder">
                    <a href="/Administration/Cars/Edit?Id=@Model.Id" class="btn btn-primary btn-block text-uppercase">Промени</a>
                    <a asp-area="Administration" asp-controller="Cars" asp-action="All" class="text-uppercase">Автомобили</a>
                </div>
            </div>
        </div>
    </div>
</section>