@using PatniListi.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model PatniListi.Web.ViewModels.Administration.Cars.CarInputViewModel

@{
    ViewData["Title"] = "Добави автомобил";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<section class="py-5">
    <div class="container shadow py-4 px-4">
        <form asp-area="Administration" asp-controller="Cars" asp-action="Create" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelType"></label>
                <select asp-for="FuelType" asp-items="Model.AllTypes" class="form-control">
                    <option selected="selected" value="" disabled>--Please Select--</option>
                </select>
                <span asp-validation-for="AllTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartKilometers"></label>
                <input asp-for="StartKilometers" class="form-control" />
                <span asp-validation-for="StartKilometers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageConsumption"></label>
                <input asp-for="AverageConsumption" class="form-control" />
                <span asp-validation-for="AverageConsumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TankCapacity"></label>
                <input asp-for="TankCapacity" class="form-control" />
                <span asp-validation-for="TankCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialFuel"></label>
                <input asp-for="InitialFuel" class="form-control" />
                <span asp-validation-for="InitialFuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CompanyId" readonly class="form-control" value="@this.UserManager.GetUserAsync(User).Result?.CompanyId" />
            </div>
            <button type="submit" class="btn btn-primary btn-block text-uppercase">Добави</button>
            <a class="nav-link text-uppercase text-center" asp-area="Administration" asp-controller="Cars" asp-action="All">Списък</a>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}